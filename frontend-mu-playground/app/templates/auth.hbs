{{page-title "Registration"}}

{{#if this.session.isAuthenticated}}
  <Jumbo @hideHamster="true" @title="My account">
    My profile:
    {{#if this.person}}
      <LinkTo @route="person" @model={{this.person}}>
        {{this.person.name}}
      </LinkTo>
    {{else}}
      You don't have a profile. Go ahead and claim some!
    {{/if}}

    <br>
    <br>
    <Auth::Logout />
  </Jumbo>
{{else}}
  <Auth::Login />
  <Auth::Register />
{{/if}}