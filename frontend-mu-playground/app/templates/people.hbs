{{page-title "People"}}

<Jumbo @title="People">
  <ul>
    {{#if @model.length }}
      {{#each @model as |person|}}
        <li>
          <LinkTo @route="person" @model={{person}}>
            {{person.name}}
          </LinkTo>
          <small>{{person.age}} years old</small>
          <button type="button" {{on "click" (fn this.removePerson person)}}>Remove</button>
        </li>
      {{/each}}
    {{else}}
      Start by adding a person...
    {{/if}}
  </ul>
</Jumbo>
<Jumbo @hideHamster="true">
  <form {{on "submit" this.createPerson}} >
    <dl>
      <dt>Name</dt>
      <dd>
        <Input @value={{this.newName}}
               placeholder="John Doe" />
      </dd>
      <dt>Age</dt>
      <dd>
        <Input @value={{this.newAge}}
               placeholder="30"
               @type="number"
               min="0"
               max="150" />
      </dd>
    </dl><br>
    <button class="button" type="submit">Add person</button>
  </form>
</Jumbo>
<Jumbo @hideHamster="true" @title="Making friends">
  {{#if @model.length }}
    <form {{on "submit" this.createFriendship}} >
      <dl>
        <dt>Let person</dt>
        <dd>
          <Form::Select
            @value={{this.newFriendSubject}}
            @onChange={{action (mut this.newFriendSubject)}}
            @options={{this.selectOptions}}
          />
        </dd>
        <dt>have a new friend in</dt>
        <dd>
          <Form::Select
            @value={{this.newFriendObject}}
            @onChange={{action (mut this.newFriendObject)}}
            @options={{this.selectOptions}}
          />
        </dd>
      </dl><br>
      <button class="button" type="submit">Make them friends</button>
    </form>
  {{else}}
    Start by adding a person...
  {{/if}}
</Jumbo>